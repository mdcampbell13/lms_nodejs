<div class="modal fade" id="forecastModal" tabindex="-1" role="dialog" aria-labelledby="forecastModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Get Your 7 Day Forecast</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form>
            <div class="zip_input">
                <div class="input-group mb-3">
                  <input required="required" type="integer" id="fzip" minlength="5" maxlength="5" class="form-control" placeholder="Zip Code" aria-label="Zipcode" aria-describedby="basic-addon2"/>
                </div>
              </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <span id="forecastSpan"><a><button type="submit" class="btn btn-danger" id="getForeCast">Get Forecast</button></a></span>
        </div>
        </form>
      </div>
      </div>
    </div>
  </div>
</div>
