                      <label class="form-check-label" for="fmReceiveCheck">
                        Set of 50 FM Receivers
                      </label>
                    </div>
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="bRayCheck"
                         name="Blu-Ray"
                      />
                      <label class="form-check-label" for="bRayCheck">
                        Blu-ray Player
                      </label>
                    </div>
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="gen2000Check"
                        name="2000 Watt Generator"
                      />
                      <label class="form-check-label" for="gen2000Check">
                        2,000 Watt Peak Portable Generator
                      </label>
                    </div>
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="gen4000Check"
                        name="4000 Watt"
                      />
                      <label class="form-check-label" for="gen4000Check">
                        4,000 Watt Peak Generator
                      </label>
                    </div>
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="powerPointCheck"
                        name="Power Point"
                      />
                      <label class="form-check-label" for="powerPointCheck">
                        Powerpoint Design and Development
                      </label>
                    </div>
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="laborCheck"
                        name="Labor"
                      />
                      <label class="form-check-label" for="laborCheck">
                        Labor
                      </label>
                    </div>
                  </div>
                  <div class="form-group">
                    <form>
                      <label for="Date">Reservation Date Requested</label><br />
                      <input
                        type="date"
                        id="resDate"
                        required="required"
                        name="Reservation Date"
                      />
                  </div>
                  <div class="form-group">
                    <label for="Additional Requests">Additional Requests</label>
                    <textarea
                      id="prequests"
                      rows="3"
