                      />
                      <label class="form-check-label" for="sound1000Check">
                        1,000 Watt Sound System
                      </label>
                    </div>
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="screen17Check"
                        name="17' Screen"
                      />
                      <label class="form-check-label" for="screen17Check">
                        17 Foot Inflatable Screen
                      </label>
                    </div>
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="screen24Check"
